{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container">
        <h2>Tableau de bord</h2>
       
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Total des Factures</div>
                    <div class="card-body">
                        <h5 class="card-title">200</h5>
                        <p class="card-text">Total des factures générées cette année.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Total des Clients</div>
                    <div class="card-body">
                        <h5 class="card-title">50</h5>
                        <p class="card-text">Nombre total de clients enregistrés.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Factures Impayées</div>
                    <div class="card-body">
                        <h5 class="card-title">12</h5>
                        <p class="card-text">Factures en attente de paiement.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-header">Factures en Retard</div>
                    <div class="card-body">
                        <h5 class="card-title">5</h5>
                        <p class="card-text">Factures dépassant la date d'échéance.</p>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="row mt-4">
            <div class="col-md-4">
                <a href="{{ path('app_client_index') }}" class="btn btn-info w-100">Gérer les Clients</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_facture_index') }}" class="btn btn-info w-100">Gérer les Factures</a>
            </div>
            <div class="col-md-4">
                {# <a href="{{ path('app_exercice_index') }}" class="btn btn-info w-100">Gérer les Exercices</a> #}
            </div>
        </div>
    </div>
{% endblock %}
